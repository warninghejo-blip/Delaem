{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true,
        "worker": true
    },
    "extends": ["eslint:recommended"],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "no-unused-vars": ["warn", { "argsIgnorePattern": "^_" }],
        "no-console": "off",
        "no-debugger": "warn",
        "semi": ["warn", "always"],
        "quotes": ["warn", "single", { "avoidEscape": true }],
        "indent": "off",
        "max-len": "off",
        "no-var": "warn",
        "prefer-const": "warn",
        "no-empty": ["error", { "allowEmptyCatch": true }],
        "no-constant-condition": "warn",
        "no-unreachable": "warn"
    },
    "globals": {
        "window": "readonly",
        "document": "readonly",
        "navigator": "readonly",
        "localStorage": "readonly",
        "fetch": "readonly",
        "console": "readonly"
    }
}
